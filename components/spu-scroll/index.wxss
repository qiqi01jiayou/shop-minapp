/* components/spu-scroll/index.wxss */
.container {
    padding: 42rpx 0 34rpx 28rpx;
    background-color: #fff;
}

.spu-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 60rpx;
}

.scroll-view {
    margin-top: 10rpx;
}

.inner {
    display: flex;
    flex-direction: row;
}

.title {
    width: 694rpx;
    height: 90rpx;
}

.spu-img {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 8rpx;
}

.price-unit {
    font-size: 26rpx !important;
    color: #257658 !important;
}

.price-value {
    font-size: 24rpx !important;
    color: #257658 !important;
}

.spu-text {
    font-size: 24rpx;
    color: #666;
    margin-top: 10rpx;
    /* 隐藏文本 */
    text-align: center;
    width: 160rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}